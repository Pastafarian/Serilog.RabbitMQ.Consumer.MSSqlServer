{
  "Serilog": {
    "Using": [ "Serilog.Sinks.RabbitMQ", "Serilog.Exceptions" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Error"
      }
    },
    "AuditTo": [
      {
        "Name": "RabbitMQ",
        "Args": {
          "autoCreateExchange": true,
          "batchPostingLimit": 2,
          "deliveryMode": "Durable",
          "emitEventFailure": "WriteToSelfLog,WriteToFailureSink",
          "exchange": "audit-exchange",
          "exchangeType": "fanout",
          "failureSinkConfiguration": [
            {
              "Name": "File",
              "Args": {
                "path": "log.txt",
                "rollingInterval": "Day"
              }
            }
          ],
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "hostnames": [
            "localhost"
          ],
          "password": "serilog",
          "period": "00:00:00:02",
          "port": 6672,
          "username": "serilog"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithExceptionDetails", "PublishTimestampEnricher" ]
  }
}

